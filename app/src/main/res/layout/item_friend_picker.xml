<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/item_height_48dp"
        android:layout_height="@dimen/item_height_48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/item_spacing_15dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/avatar_iv"
        android:layout_toLeftOf="@id/tick_iv"
        android:layout_marginLeft="@dimen/item_spacing_8dp"
        android:layout_marginRight="@dimen/item_spacing_8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_16sp" />

    <ImageView
        android:id="@+id/tick_iv"
        android:layout_width="@dimen/icon_size_16dp"
        android:layout_height="@dimen/icon_size_16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_spacing_15dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/tick"
        android:scaleType="centerInside"/>


</RelativeLayout>
























