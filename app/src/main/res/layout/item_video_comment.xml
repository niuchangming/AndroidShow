<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:padding="@dimen/item_spacing_10dp">

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/icon_size_32dp"
        android:layout_height="@dimen/icon_size_32dp"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/item_spacing_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--xmlns:fresco="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/avatar"-->
        <!--android:layout_width="@dimen/icon_size_48dp"-->
        <!--android:layout_height="@dimen/icon_size_48dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--fresco:actualImageScaleType="focusCrop"-->
        <!--fresco:placeholderImage="@mipmap/default_avatar"-->
        <!--fresco:roundAsCircle="true"-->
        <!--fresco:roundedCornerRadius="28dp"-->
        <!--fresco:roundingBorderColor="@color/app_default_bg"-->
        <!--fresco:roundingBorderWidth="3dp" />-->

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_spacing_10dp"
        android:layout_marginRight="@dimen/item_spacing_10dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_12sp"
        android:background="#00000000"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_spacing_10dp"
        android:layout_marginTop="@dimen/item_spacing_6dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_10sp"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_body" />

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_spacing_10dp"
        android:layout_marginTop="@dimen/item_spacing_6dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_12sp"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

</android.support.constraint.ConstraintLayout>