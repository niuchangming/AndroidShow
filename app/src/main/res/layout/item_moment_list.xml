<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_spacing_15dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/icon_size_32dp"
        android:layout_height="@dimen/icon_size_32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@mipmap/placeholder" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_16dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toLeftOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Army" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_16dp"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="5 hours age" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ekoolab.com.show.views.ninegridview.NewNineGridlayout
        android:id="@+id/nine_grid_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <LinearLayout
        android:id="@+id/ll_operate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/layout_margin_8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nine_grid_layout">

        <ImageButton
            android:id="@+id/iv_heart"
            android:layout_width="@dimen/icon_size_16dp"
            android:layout_height="@dimen/icon_size_16dp"
            android:background="@drawable/selector_heart"/>

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_2dp"
            android:textColor="@color/colorRed"
            android:text="0"
            android:textSize="@dimen/text_size_12sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/iv_reward"
            android:layout_width="@dimen/icon_size_16dp"
            android:layout_height="@dimen/icon_size_16dp"
            android:background="@drawable/selector_award_btn" />

        <ImageButton
            android:id="@+id/iv_comment"
            android:layout_width="@dimen/icon_size_16dp"
            android:layout_height="@dimen/icon_size_16dp"
            android:layout_marginLeft="@dimen/layout_margin_16dp"
            android:background="@drawable/selector_comment_btn" />

    </LinearLayout>

    <ekoolab.com.show.views.nestlistview.NestFullListView
        android:id="@+id/nest_full_listview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_operate" />

</android.support.constraint.ConstraintLayout>