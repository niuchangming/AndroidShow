<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_first_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/grayColorBg"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="00:00"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/rl_frames"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_frames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayColorBg"
        app:layout_constraintBottom_toBottomOf="parent">

        <ekoolab.com.show.views.MyHorizontalScrollView
            android:id="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_scroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

        </ekoolab.com.show.views.MyHorizontalScrollView>

        <FrameLayout
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/horizontal"
            android:layout_alignTop="@id/horizontal"
            android:layout_centerHorizontal="true"
            android:background="#30ffffff">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/blue" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:src="@drawable/selector_play_pause" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_play_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@mipmap/play" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPink"
        android:paddingTop="@dimen/item_spacing_4dp"
        android:paddingBottom="@dimen/item_spacing_4dp"
        android:paddingLeft="@dimen/item_spacing_8dp"
        android:paddingRight="@dimen/item_spacing_8dp"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>