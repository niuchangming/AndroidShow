<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/chat_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:background="@color/colorSuperLightGray"
        android:paddingLeft="@dimen/item_spacing_8dp"
        android:paddingRight="@dimen/item_spacing_8dp"
        android:paddingTop="@dimen/item_spacing_4dp"
        android:paddingBottom="@dimen/item_spacing_4dp"
        android:layout_marginTop="@dimen/layout_margin_24dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_12sp" />

    <ImageView
        android:id="@+id/avatar_iv"
        android:src="@drawable/image_placeholder"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/chat_date_tv"
        android:layout_alignWithParentIfMissing="true"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/icon_size_32dp"
        android:layout_height="@dimen/icon_size_32dp"
        android:layout_marginRight="@dimen/layout_margin_8dp"
        android:layout_marginTop="@dimen/layout_margin_8dp"/>

    <TextView
        android:id="@+id/name_tv"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_iv"
        android:layout_alignTop="@id/avatar_iv"
        android:layout_marginBottom="4dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/chat_message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_iv"
        android:layout_below="@id/name_tv"
        android:layout_alignWithParentIfMissing="true"
        app:cardBackgroundColor="@color/colorSilver"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/chat_message_tv"
            android:paddingTop="@dimen/item_spacing_6dp"
            android:paddingLeft="@dimen/item_spacing_10dp"
            android:paddingRight="@dimen/item_spacing_10dp"
            android:paddingBottom="@dimen/item_spacing_6dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/chat_time_tv"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/colorGray"
        android:layout_toRightOf="@id/chat_message_card"
        android:layout_alignBottom="@id/chat_message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>






















