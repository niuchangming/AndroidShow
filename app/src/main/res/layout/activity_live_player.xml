<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"/>

    <ImageView
        android:id="@+id/mask_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/layout_margin_32dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height_48dp"
            android:layout_marginLeft="@dimen/item_spacing_15dp"
            android:layout_marginRight="@dimen/item_spacing_15dp"
            android:layout_marginTop="@dimen/item_spacing_20dp"
            android:background="@drawable/bg_user_info_bar"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/avatar_iv"
                android:layout_width="@dimen/icon_size_48dp"
                android:layout_height="@dimen/icon_size_48dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_spacing_4dp"
                android:layout_marginRight="@dimen/item_spacing_4dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16sp" />
                <TextView
                    android:id="@+id/audience_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_spacing_2dp"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_spacing_4dp">
                <Button
                    android:id="@+id/follow_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/icon_size_40dp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/follow"
                    android:background="@drawable/bg_follow_btn"/>
                <com.rey.material.widget.ProgressView
                    android:id="@+id/follow_state_pv"
                    android:layout_width="@dimen/icon_size_20dp"
                    android:layout_height="@dimen/icon_size_20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:v_styleId="@array/pv_circular" />
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/audience_container_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_48dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar"
        android:layout_toLeftOf="@id/bubble_view"
        android:weightSum="5"
        android:gravity="bottom"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/layout_margin_8dp"
            android:layout_marginBottom="@dimen/layout_margin_8dp"
            android:layout_marginLeft="@dimen/layout_margin_8dp"
            android:scrollbars="none"/>
    </LinearLayout>

    <ekoolab.com.show.views.BubbleView
        android:id="@+id/bubble_view"
        android:layout_width="@dimen/item_width_100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/layout_margin_64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/item_spacing_10dp"
        android:paddingBottom="@dimen/item_spacing_10dp"
        android:layout_marginBottom="@dimen/layout_margin_24dp">

        <ImageButton
            android:id="@+id/comment_btn"
            android:layout_width="@dimen/icon_size_32dp"
            android:layout_height="@dimen/icon_size_32dp"
            android:layout_marginLeft="@dimen/layout_margin_16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/circle_comment"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/like_float_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin_16dp"
            android:src="@mipmap/ic_heart_line" />

        <ImageButton
            android:id="@+id/dismiss_btn"
            android:layout_width="@dimen/icon_size_32dp"
            android:layout_height="@dimen/icon_size_32dp"
            android:layout_marginRight="@dimen/layout_margin_16dp"
            android:layout_toLeftOf="@id/like_float_btn"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/circle_cross"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="@dimen/icon_size_32dp"
            android:layout_height="@dimen/icon_size_32dp"
            android:layout_marginRight="@dimen/layout_margin_16dp"
            android:layout_toLeftOf="@id/dismiss_btn"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/circle_share"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/gift_btn"
            android:layout_width="@dimen/icon_size_32dp"
            android:layout_height="@dimen/icon_size_32dp"
            android:layout_marginRight="@dimen/layout_margin_16dp"
            android:layout_toLeftOf="@id/share_btn"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/circle_gift"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</RelativeLayout>