<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_18sp"/>
    </android.support.v7.widget.Toolbar>

    <include layout="@layout/ic_spitview_horizontal" />

    <RelativeLayout
        android:id="@+id/personalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_spacing_20dp">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/icon_size_68dp"
            android:layout_height="@dimen/icon_size_68dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_marginTop="@dimen/item_spacing_6dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorBlack"
            android:text="@string/name"/>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/item_spacing_6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/item_spacing_20dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/followers"/>
            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/item_spacing_20dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/following"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/item_spacing_6dp">

            <Button
                android:id="@+id/btn_block"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_round_corner"
                android:gravity="center"
                android:text="@string/block"
                android:textColor="@color/colorBlack" />
            <Button
                android:id="@+id/btn_follow"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/follow"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_black_round_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/report_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/status"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/text_size_18sp"
                android:layout_height="@dimen/text_size_18sp"
                android:gravity="center_vertical"
                android:tint="@color/colorRed"
                android:src="@mipmap/whatup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:text="@string/report"/>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/ic_spitview_horizontal" />

    <android.support.design.widget.TabLayout
        android:id="@+id/indicator_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorBlack"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabSelectedTextColor="@color/colorBlack"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/colorGray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>